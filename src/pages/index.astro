		<script>
			document.addEventListener('DOMContentLoaded', function() {
				// Hero Slideshow Functionality
				const heroImages = document.querySelectorAll('.hero-image');
				const dots = document.querySelectorAll('.dot');
				let currentSlide = 0;
				let slideInterval;
				let isHovered = false;

				function showSlide(index) {
					// Remove active class from all images and dots
					heroImages.forEach(img => img.classList.remove('active'));
					dots.forEach(dot => dot.classList.remove('active'));
					
					// Add active class to current image and dot
					if (heroImages[index] && dots[index]) {
						heroImages[index].classList.add('active');
						dots[index].classList.add('active');
						currentSlide = index;
					}
				}

				function nextSlide() {
					if (!isHovered) {
						const next = (currentSlide + 1) % heroImages.length;
						showSlide(next);
					}
				}

				function startSlideshow() {
					// Clear any existing interval first
					if (slideInterval) {
						clearInterval(slideInterval);
					}
					// Start new interval
					slideInterval = setInterval(nextSlide, 5000); // 5 seconds for more relaxed timing
				}

				function stopSlideshow() {
					if (slideInterval) {
						clearInterval(slideInterval);
						slideInterval = null;
					}
				}

				// Add click event listeners to dots
				dots.forEach((dot, index) => {
					dot.addEventListener('click', () => {
						showSlide(index);
						// Only restart if not hovered
						if (!isHovered) {
							startSlideshow();
						}
					});
				});

				// Pause slideshow on hover
				const slideshowContainer = document.querySelector('.slideshow-container');
				if (slideshowContainer) {
					slideshowContainer.addEventListener('mouseenter', () => {
						isHovered = true;
						stopSlideshow();
					});
					
					slideshowContainer.addEventListener('mouseleave', () => {
						isHovered = false;
						startSlideshow();
					});
				}

				// Start the slideshow after a short delay
				setTimeout(startSlideshow, 1000);

				// Funcionalidad del formulario condicional
				const attendingYes = document.getElementById('attending-yes');
				const attendingNo = document.getElementById('attending-no');
				const yesQuestions = document.getElementById('attending-yes-questions');
				const noQuestions = document.getElementById('attending-no-questions');

				function showConditionalSections() {
					if (attendingYes.checked) {
						yesQuestions.classList.add('show');
						noQuestions.classList.remove('show');
					} else if (attendingNo.checked) {
						yesQuestions.classList.remove('show');
						noQuestions.classList.add('show');
					} else {
						yesQuestions.classList.remove('show');
						noQuestions.classList.remove('show');
					}
				}

				// Listen for changes in attendance radio buttons
				attendingYes.addEventListener('change', showConditionalSections);
				attendingNo.addEventListener('change', showConditionalSections);

				// Envío del formulario RSVP
				const rsvpForm = document.getElementById('rsvpForm');
				rsvpForm.addEventListener('submit', function(e) {
					e.preventDefault();
					
					// Obtener datos del formulario
					const formData = new FormData(rsvpForm);
					const data = Object.fromEntries(formData);
					
					// Validación básica
					if (!data.name || !data.email || !data.attending) {
						alert('Por favor, completa todos los campos obligatorios.');
						return;
					}

					// Validación condicional para asistentes
					if (data.attending === 'yes') {
						// Check if at least one event is selected
						const events = formData.getAll('events');
						if (events.length === 0) {
							alert('Por favor, selecciona al menos un evento al que vas a asistir.');
							return;
						}
					}
					
					// En una aplicación real, enviarías estos datos a un servidor
					let message = '¡Gracias por tu confirmación! ';
					if (data.attending === 'yes') {
						message += 'Estamos emocionados de celebrar contigo';
						if (data['plus-one-name']) {
							message += ` y con ${data['plus-one-name']}`;
						}
						message += '. ';
					} else {
						message += 'Sentimos que no puedas acompañarnos, pero sabemos que estarás con nosotros en espíritu. ';
					}
					message += 'Nos pondremos en contacto pronto.';
					
					alert(message);
					rsvpForm.reset();
					// Reset conditional sections
					yesQuestions.classList.remove('show');
					noQuestions.classList.remove('show');
				});

				// Desplazamiento suave para enlaces de navegación
				const navLinks = document.querySelectorAll('.nav-menu a');
				navLinks.forEach(link => {
					link.addEventListener('click', function(e) {
						e.preventDefault();
						const targetId = this.getAttribute('href');
						const targetSection = document.querySelector(targetId);
						
						if (targetSection) {
							const offsetTop = targetSection.getBoundingClientRect().top + window.pageYOffset - 80;
							window.scrollTo({
								top: offsetTop,
								behavior: 'smooth'
							});
						}
					});
				});

				// Expandable text functionality
				const readMoreBtns = document.querySelectorAll('.read-more-btn');
				readMoreBtns.forEach(btn => {
					btn.addEventListener('click', function() {
						const text = this.previousElementSibling;
						text.classList.toggle('expanded');
						this.textContent = text.classList.contains('expanded') ? 'Leer menos' : 'Leer más';
					});
				});
			});
		</script>
